<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.asubank.model.recipient">
	<class name="Recipient" table="recipient">
		<id name="Id" column="id">
			<generator class="increment" />
		</id>		
		<property name="strID">
		<column name="strid" length="20" not-null="true" />
		</property>
		<property name="recipient_nickname">
		    <column name="recipient_nickname" length="20" not-null="true" />
		</property>
		<property name="recipient_lastname">
		    <column name="recipient_lastname" length="20" not-null="true" />
		</property>
		<property name="recipient_accountnumber">
		    <column name="recipient_accountnumber" length="12" not-null="true" />
		</property>
		
		
	</class>
</hibernate-mapping>
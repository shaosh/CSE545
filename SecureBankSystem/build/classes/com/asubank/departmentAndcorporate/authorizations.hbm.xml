<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.asubank.departmentAndcorporate">
 
    <class name="Authorizations" table="authorizations">
        <id name="user_id" column="user_id">
            <generator class="assigned"/>
        </id>        
        <property name="department" column="department" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="isAuthorized" column="isAuthorized" type="string"/>
        <property name="employee_to_transfer" column="employee_to_transfer" type="string"/>
    </class>
 
</hibernate-mapping>